<div>
  {{#each classes}}
  <div class="w3-padding w3-col l4 m6 s12 ">
    <div class="w3-card-4">
      <header class="w3-center w3-container w3-light-gray">
        <a href="/Clases/Editar/{{_id}}"><i class="w3-margin-top w3-right w3-padding fas fa-edit"></i></a>
        <h4 class="w3-padding">
          {{title}}
        </h4>
      </header>
      <div class="w3-padding">
        <p><b>Profesor: </b>{{teacher}}</p>
        <p><b>Days: </b>{{days}}</p>
        <p><b>De: </b>{{hourStart}}</p>
        <p><b>Hasta: </b>{{hourEnd}}</p>
        <p><b>Link: </b>{{link}}</p>
        <form class="w3-center" action="/Clases/Borrar/{{_id}}?_method=DELETE" method="POST">
          <input type="hidden" name="_method" value="DELETE">
          <input class="w3-red w3-button" type="submit" value="Eliminar">
        </form>
      </div>
    </div>
  </div>
  {{/each}}
</div>